<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_item_order_available">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/order_number_view"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"

        android:text="№ 12345"
        android:textSize="20sp"
        android:textColor="@color/colorDarkGray"
        android:fontFamily="@font/manrope_regular"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/order_city_view"

        app:layout_constraintLeft_toRightOf="@id/order_number_view"
        android:layout_marginStart="5dp"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"

        android:text="| Казань"
        android:textSize="20sp"
        android:textColor="@color/colorDarkGray"
        android:fontFamily="@font/manrope_regular"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/order_address_view"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"

        android:text="Хлебопекарная 65А"
        android:textSize="20sp"
        android:textColor="@color/colorDarkGray"
        android:fontFamily="@font/manrope_bold"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:id="@+id/order_item_count_view"

        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="25dp"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"

        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/background_item_count"

        android:textColor="#000"
        android:textSize="25sp"
        android:text="1" />



</androidx.constraintlayout.widget.ConstraintLayout>