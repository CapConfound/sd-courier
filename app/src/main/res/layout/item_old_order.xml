<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:id="@+id/my_order_item_id"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_item_order">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="8"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="2dp"
                    android:layout_marginEnd="20dp"

                    android:id="@+id/order_history_number_view"

                    android:background="@drawable/tag_gray"
                    android:text="№ 12345"
                    android:textSize="18sp"
                    android:textColor="@color/colorDarkGray"
                    android:fontFamily="@font/manrope_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/order_history_point2_city_view"


                    android:layout_marginRight="10dp"


                    android:maxLines="2"
                    android:layout_gravity="center_vertical"
                    android:text="Санкт-Петербугр"
                    android:textSize="18sp"
                    android:textColor="@color/colorDarkGray"
                    android:fontFamily="@font/manrope_bold"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"

                    android:id="@+id/order_history_point2_address_view"

                    android:maxLines="2"
                    android:layout_gravity="center_vertical"
                    android:text="Шапочкина 21"
                    android:textSize="20sp"
                    android:textColor="@color/colorDarkGray"
                    android:fontFamily="@font/manrope_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"

                    android:id="@+id/order_history_time_view"

                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="24.05"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorDarkGray"
                    android:fontFamily="@font/manrope_regular"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>