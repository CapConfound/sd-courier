<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:id="@+id/my_orders_page_pick_up_status_view"

            android:text="Откуда"
            android:textSize="26sp"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/manrope_bold"/>
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:maxLines="2"
            android:id="@+id/my_orders_page_pick_up_name_view"
            android:paddingVertical="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/manrope_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Сергей Иванович"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/my_orders_page_pick_up_call_btn"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="5dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/manrope_bold"

                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/background_button_call"
                android:text="Позвонить"/>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/manrope_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Город"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/my_orders_page_pick_up_city_view"

            android:textSize="20sp"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/manrope_bold"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Казань"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/manrope_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Проезд"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/my_orders_page_pick_up_street_view"

            android:maxWidth="300dp"
            android:textSize="20sp"

            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/manrope_bold"
            app:layout_constraintRight_toRightOf="parent"
            android:text="улица Пушкина"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/manrope_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Дом"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/my_orders_page_pick_up_house_view"

            android:textSize="20sp"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/manrope_bold"
            app:layout_constraintRight_toRightOf="parent"
            android:text="50"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/manrope_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Квартира"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/my_orders_page_pick_up_apartment_view"

            android:textSize="20sp"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/manrope_bold"
            app:layout_constraintRight_toRightOf="parent"
            android:text="12"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/manrope_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Показать на карте"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/my_orders_page_pick_up_map_button"

            android:paddingHorizontal="5dp"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/manrope_bold"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/background_button_show"
            android:text="Показать"/>
    </androidx.constraintlayout.widget.ConstraintLayout><androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/my_orders_page_pick_up_payment_type_view"

        android:textSize="20sp"
        android:textColor="@color/colorDarkGray"
        android:fontFamily="@font/manrope_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Тип оплаты"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/my_orders_page_pick_up_cost_view"

        android:textSize="20sp"
        android:textColor="@color/colorDarkGray"
        android:fontFamily="@font/manrope_bold"
        app:layout_constraintRight_toRightOf="parent"
        android:text="500 р."/>
</androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/manrope_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Комментарий"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/my_orders_page_pick_up_note_button"

            android:paddingHorizontal="5dp"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/manrope_bold"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/background_button_show"
            android:text="Показать"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>