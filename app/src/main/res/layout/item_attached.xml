<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/background_item_order_available"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/recycler_item_id_view"
        android:fontFamily="@font/manrope_regular"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:text="1"
        android:textColor="@color/colorDarkGray"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:layout_height="match_parent"
        android:id="@+id/recycler_item_name_view"
        android:fontFamily="@font/manrope_regular"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:text="Название"
        android:textColor="@color/colorDarkGray"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/recycler_item_id_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/recycler_item_cost_view"
        android:fontFamily="@font/manrope_bold"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="2000"
        android:textColor="@color/colorDarkGray"
        android:textSize="26sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>